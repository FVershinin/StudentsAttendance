<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="Vadim" id="removed teacher_id from subject">
        <dropColumn tableName="subject" columnName="teacher_id"/>
    </changeSet>

    <changeSet id="added teacher_subject table" author="Vadim">
        <createTable tableName="subject_teacher">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="subject_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="teacher_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="added teacher_subject foreign keys" author="">
        <addForeignKeyConstraint baseTableName="subject_teacher" baseColumnNames="subject_id" constraintName="fk_subject_teacher_subject" referencedTableName="subject"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="subject_teacher" baseColumnNames="teacher_id" constraintName="fk_subject_teacher_teacher" referencedTableName="teacher"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>